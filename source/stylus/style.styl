/* *************
BANNER VARIABLES
**************** */
banner_width = 970px
banner_height = 250px
banner_border = rgb(0, 0, 0) 1px solid
banner_bg = white
vfred = #E30613

/* *************
CUSTOM STYLES
**************** */

.f1, .f2, .f3, .f4, .f5, .f6, .vf_logo
  position absolute

@import 'utilities/utilities'
@import 'utilities/banner_defaults'
@import 'components/objects'

.copy
  & img
    position absolute
    opacity 0
    z-index 10
    top 50%
    transform translate(0, -50%)
.will-zoom
  position absolute
  width 100%
  height 100%
  & > .mask
    position absolute
    width 100%
    height 100%
    background vfred
    mix-blend-mode multiply
    opacity 0
    z-index 10
.feature-collapsed, .feature-expanded
  & > .rhombus
    position absolute
    width 900px
    height 805px
    left -882px
    top -162px
    border-radius 26px
    transform rotate(-45deg)
    background-color vfred
    mix-blend-mode multiply
    z-index 11
  & > .vf_logo
    top 183px
    left 116px
    z-index 20

.feature-collapsed
  background url('../img/background.jpg')
  & .f1_c1
    left 50%
    transform translate(-50%, -50%)
  & .f2_c1
    left 165px
  & .f3_c1
    left 250px
  // FRAME 4
  & .mm_personal
    left 190px
  & .mm_cta
    left 455px
  & .pulses
    opacity 0
    & .pulse
      pointer-events none
      color white
      width 1px
      height 1px
      border-radius 50%
      background rgba(0,0,0,0)
      position absolute
      box-shadow: 0px 0px 0px 0px rgba(227, 6, 19, 1)
      z-index 110
      & .plus
        font-size 1.1rem
        font-weight 800
        position absolute
        left -4px
        top -11px
      &.data.headphones
        top 50px
        left 340px
      &.data.popcorn
        top 210px
        left 245px
      &.data.camera
        top 215px
        left 235px
      &.calls
        top 115px
        right 70px
      &.international.coins
        top 25px
        left 160px
      &.international.chopsticks
        left 535px
        bottom 30px
      &.international.passport
        top 30px
        left 580px
      &.international.postcard
        top 210px
        right 40px
      &.international.ticket
        top 60px
        left 790px






.vf_tagline
  position absolute
  left 10px
  top 188px
  z-index 15
  & :nth-of-type(2)
    opacity 0
  & img
    position absolute

.vf_tcs
  position absolute
  bottom 5px
  z-index 11
  opacity 0
  right 5px
  bottom 5px


.feature-expanded
  background url('../img/background.jpg')
  overflow hidden
  & > .mask
    position absolute
    width 100%
    height 100%
    background vfred
    mix-blend-mode multiply
    opacity 0
    z-index 10
  & .mm_data_f1_c1, .mm_calls_f1_c1, .mm_int_f1_c1
    position absolute
    top 252px
  & .mm_data_f1_c1
    left 265px
  & .mm_calls_f1_c1
    left 195px
  & .mm_int_f1_c1
    left 285px
  & .mm_f2_c1
    position absolute
    top 252px
    left 300px
  & .mm_f3_c1
    position absolute
    top 231px
    left 300px
    opacity 0
    transform translate(0%, 0%)
  // FRAME 4
  & .mm_personal
    position absolute
    top 160px
    left 280px
    transform translate(0, 0)
  & .mm_cta
