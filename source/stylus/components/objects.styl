@import 'phone'

.feature-collapsed
  .objects:not(.copy)
    opacity 0
  .objects
    img
      position absolute

  .coffee
    left 0px
    top 54%
    transform translate(0, -50%)

  .headphones
    left 235px
    top -90px
    transform rotate(65deg)
    z-index 3

  .passport
    left 430px
    top -140px
    transform rotate(-70deg)
    z-index 2

  .camera
    left 142px
    bottom -44px

  .ticket
    left 715px
    top -20px
    transform rotate(-15deg)
    z-index 2

  .popcorn
    left 620px
    top -80px
    transform rotate(45deg)
    z-index 1

  .bluetooth
    left 863px
    top 60px
    z-index 1000

  .postcard
    right -43px
    bottom -25px
  .chopsticks
    position absolute
    left 320px
    bottom 10px
    z-index 9
  & .chopsticks_single--1
    transform rotate(-15deg) scale(0.8)
    bottom 10px
  & .chopsticks_single--2
    transform rotate(-15deg) scale(0.8)
    bottom 25px
  & .spoon
    bottom -60px
    left 100px
    transform scale(0.8) rotate(-20deg)

  .coins
    top -100px
    left 60px
    z-index 4
.feature-expanded
  & .objects
    opacity 0
  & .objects img
    position absolute
  & .coffee
    left 10px
    top 295px
    transform scale(1.5)
  & .glasses
    bottom -40px
    left 155px
    transform rotate(-25deg) scale(1.5)
  & .diary
    top -130px
    right -45px
    transform rotate(25deg)
  & .pen
    top 150px
    right -80px
    transform rotate(35deg)
  & .bluetooth
    top 66px
    left 215px
    transform rotate(25deg) scale(1.5)
  & .postcard
    bottom 0
    right 0
  & .passport
    top -120px
    left 255px
    transform rotate(-65deg)
  & .ticket
    top -20px
    left 800px
    transform rotate(-25deg)
  & .coins_many
    bottom -100px
    left 200px
  & .coins_10:nth-of-type(2)
    top 100px
    left 210px
  & .coins_10:nth-of-type(3)
    top 40px
    left 170px
  & .coins_50
    top 70px
    left 200px
  & .chopsticks
    position absolute
    bottom 220px
    left -50px
    transform rotate(15deg)
  & .chopsticks_single--1
    left 15px
    top 20px
    transform rotate(-3deg)
  & .chopsticks_single--2
    left 17px
  & .spoon
    top 50px
    transform rotate(-10deg)
  & .usb
    left 85px
    top -40px
  & .headphones
    right -40px
    top 100px
    transform rotateY(180deg) rotate(18deg)
  & .camera
    bottom -10px
    left 270px
    transform rotate(-22deg)
