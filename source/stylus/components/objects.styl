@import 'phone'

.feature-collapsed
  .objects:not(.copy)
    opacity 0
  .objects
    img
      position absolute
  .coffee
    left 0px
    top 54%
    transform translate(0, -50%)
  .headphones
    left 285px
    top -150px
    filter contrast(115%)
    transform rotate(65deg) scale(0.8)
    z-index 3
  .passport
    left 500px
    top -190px
    filter contrast(115%)
    transform rotate(-70deg) scale(0.72)
    z-index 2
  .camera
    left 90px
    bottom -70px
    transform scale(0.8) rotate(10deg)
  .ticket
    left 715px
    top -40px
    filter contrast(110%)
    transform rotate(15deg) scale(0.6)
    z-index 2
  .bluetooth
    right -50px
    top -10px
    transform rotate(-25deg) scale(0.7)
    filter contrast(115%)
    z-index 3
  .postcard
    right -43px
    bottom -25px
    z-index 3
  .chopsticks
    position absolute
    left 310px
    bottom -10px
    z-index 9
  & .chopsticks_single--1
    transform rotate(-25deg) scale(0.8)
    bottom 10px
  & .chopsticks_single--2
    transform rotate(-25deg) scale(0.8)
    bottom 25px
  & .spoon
    bottom -50px
    left 100px
    transform scale(0.8) rotate(-20deg)
  & .coins
    top -120px
    left 25px
    filter contrast(110%)
    transform scale(0.7) rotate(10deg)
    z-index 4

.feature-expanded
  & .objects
    opacity 0
  & .objects img
    position absolute
  & .coffee
    left 10px
    top 295px
    transform scale(1.5)
  & .glasses
    bottom -40px
    left 155px
    transform rotate(-25deg)
  & .diary
    top -130px
    right -45px
    transform rotate(25deg)
  & .pen
    top 150px
    right -80px
    transform rotate(35deg)
  & .bluetooth
    top -35px
    left 130px
  & .postcard
    bottom 0
    right 0
  & .passport
    top -190px
    left 240px
    z-index 1
    transform rotate(-65deg) scale(0.9)
  & .ticket
    top -20px
    left 790px
    transform rotate(-25deg)
  & .coins_many
    bottom -135px
    left 200px
  & .coins_10:nth-of-type(2)
    top 100px
    left 210px
  & .coins_10:nth-of-type(3)
    top 40px
    left 170px
  & .coins_10:nth-of-type(4)
    top -5px
    left 160px
  & .coins_50
    top 70px
    left 200px
  & .chopsticks
    position absolute
    bottom 240px
    left -50px
    transform rotate(15deg)
  & .chopsticks_single--1
    left 15px
    top 20px
    transform rotate(-3deg)
  & .chopsticks_single--2
    left 17px
  & .spoon
    top 45px
    transform rotate(-10deg)
  & .usb
    left 85px
    top -40px
  & .headphones
    right -50px
    top 50px
    transform rotateY(180deg) rotate(10deg)
  & .camera
    bottom -25px
    left 270px
    transform rotate(-10deg)
  & .popcorn
    top -70px
    left 345px
    transform rotate(35deg)
